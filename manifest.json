{
    "manifest_version": 2,
    "name": "Kronos Timer",
    "version": "0.1",
    "description": "Simple tool for tracking your working time.",
    "author": "Nikola Markovic",
    "icons": {
        "16": "assets/icon_play_16.png",
        "32": "assets/icon_play_32.png",
        "48": "assets/icon_play_48.png",
        "128": "assets/icon_play_128.png"
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_icon": {
                "16": "assets/icon_play_16.png",
                "32": "assets/icon_play_32.png",
                "48": "assets/icon_play_48.png",
                "128": "assets/icon_play_128.png"
            },
        "default_title": "Click to start/pause.",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "offline_enabled": true,
    "options_page": "options/options.html"
}
