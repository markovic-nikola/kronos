{
    "manifest_version": 2,
    "name": "Kronos Timer",
    "version": "0.8.3",
    "description": "Simple tool for tracking your working time.",
    "author": "Nikola Markovic",
    "icons": {
        "16": "assets/icon_play_16.png",
        "32": "assets/icon_play_32.png",
        "48": "assets/icon_play_48.png",
        "128": "assets/icon_play_128.png"
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_icon": {
                "16": "assets/icon_play_16.png",
                "32": "assets/icon_play_32.png",
                "48": "assets/icon_play_48.png",
                "128": "assets/icon_play_128.png"
            },
        "default_title": "Kronos - track your time.",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "offline_enabled": true,
    "options_page": "options/options.html",
    "commands": {
        "play_pause": {
            "suggested_key": {
                "default": "Ctrl+Shift+Space",
                "mac": "Command+Shift+Space"
            },
            "description": "Play/pause timer"
        },
        "stop": {
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "mac": "Command+Shift+X"
            },
            "description": "Stop timer"
        }
    }
}
